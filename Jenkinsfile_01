pipeline {
    agent any
    
    parameters {
        string(name: 'Your Name', defaultValue: 'Default String', description: 'Enter a string value')
        booleanParam(name: 'Select Option', defaultValue: false, description: 'Select true or false')
        choice(name: 'Select Your Choice', choices: ['Option1', 'Option2', 'Option3'], description: 'Select a choice')
        password(name: 'PASSWORD_PARAM', description: 'Enter a password')
        text(name: 'Description', defaultValue: 'Default text content', description: 'Enter multiline text')
        file(name: 'Upload File', description: 'Upload a file')
    }
    
    stages {
        stage('Display Parameters') {
            steps {
                script {
                    echo "String Parameter: ${params.Your Name}"
                    echo "Boolean Parameter: ${params.Select Option}"
                    echo "Choice Parameter: ${params.Select Your Choice}"
                    echo "Password Parameter: (hidden for security)"
                    echo "Text Parameter: ${params.Description}"
                    echo "File Parameter: ${params.Upload File}"
                }
            }
        }
    }
}
